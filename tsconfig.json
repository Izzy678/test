{
    "compilerOptions": {
      /* Language and Environment */
      "target": "es2019",
      /* Modules */
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      /* Type Checking */
      "strict": false,
      // "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "outDir": "./dist"
    }
  }
  